<h1 align="center">Signup for KB platform</h1>

<%= form_with(model: @member, local: true) do |form| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :@member_name %>
  </div>

  <div class="field">
    <%= form.label :team %>
    <%= form.text_field :team, id: :@member_team %>
  </div>

  <div class="field">
    <%= form.label :mailaddress %>
    <%= form.text_field :mailaddress, id: :@member_mailaddress %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :@member_password %>
  </div>

  <div class="actions">
    <%= form.submit "Sign up", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
