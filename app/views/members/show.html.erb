<p id="notice"><%= notice %></p>

<h1 class="center">Welcome to <%= @member.name %>'s page</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for @member, size: 100 %>
		<div class="actions">
			<%= link_to "Edit my profile and setting", edit_member_path(@member), class: "btn btn-xs btn-primary" %>
			<%= link_to "Delete this account", member_path(@member), method: :delete,
				 data: { confirm: "Are you sure you want to delete this account>"}, 
				 class: "btn btn-xs btn-danger" %>
			<%= link_to "View all members", members_path, class: "btn btn-xs btn-success" %>
		</div>
	</div>
</div>

<h4 class="center"><%= @member.name %>'s goals</h4>
<%= render 'goals/goal', obj: @member.goals %>