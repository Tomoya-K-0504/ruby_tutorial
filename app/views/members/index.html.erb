<p id="notice"><%= notice %></p>

<h1 align="center">KB Members</h1>

<% @members.each do |member| %>
  <ul class="listing">
    <div class="row center">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="name"> 
            <li><%= link_to gravatar_for(member), member_path(member) %></li>
            <li class="name"><%= link_to member.name, member_path(member) %></li>
            <li><small><%= pluralize(member.goals.count, "goal") if member.goals %></small></li>
          </div>
          <div class="team">
            <%= truncate(member.team , length: 100) %>
          </div>
          <div class="lq">LQ : 
            <%= member.lq %>
          </div>
          <div class="profile">Profile : 
            <%= member.profile %>
          </div>
          <!-- <div class="meta-details">
            <small>Created by: <%# = goal.member.name if goal.member %>,
              <%#= time_ago_in_words(goal.created_at) %> ago,
              last updated: <%#= time_ago_in_words(goal.updated_at) %>
            </small>
          </div> -->
          <div class="actions">
            <%= link_to 'Edit profile', edit_member_path(member), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Delete your account', member_path(member), method: :delete, data: { confirm: 'Are you sure you want to delete this account?' }, class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </ul>

<% end %>
<%= link_to 'New member', new_member_path, class: "btn btn-xs btn-primary" %>

