<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :member_name %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.number_field :project_id, id: :project_id %>
    <!-- TODO -->
    <%#= select_tag(:project_id, options_from_collection_for_select(@projects, :id, :name)) %>
  </div>

  <div class="field">
    <%= form.label :lq %>
    <%= form.text_field :lq, id: :member_lq %>
  </div>

  <div class="field">
    <%= form.label :mailaddress %>
    <%= form.text_field :mailaddress, id: :member_mailaddress %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :member_password %>
  </div>

  <div class="actions">
    <%= form.submit(@member.new_record? ? "Create Account" : "Update account", class: "btn btn-primary btn-lg") %>
  </div>
<% end %>
