<% if @project.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @project.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end -%>

<div class="row">
	<div class="col-md-12">

		<%= form_for(@project, :html => {class: "from-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<div class="controll-label col-sm-2">
					<%= f.label :name %>
				</div>
				<div col-sm-8>
					<%= f.text_field :name, class: "form-control", placeholder: "Name of project", autofocus: true %>
				</div>

			</div>
			<div class="form-group">
				<div class="controll-label col-sm-2">
					<%= f.label :vision %>
				</div>
				<div col-sm-8>
					<%= f.text_area :vision, class: "form-control", placeholder: "PJ's vision", autofocus: true %>
				</div>

			</div>
			<div class="form-group">
				<div class="col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			<%= link_to "[Cancel request and return to project listing]", projects_path %>
		</div>

	</div>
	
</div>