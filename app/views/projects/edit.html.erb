<h1>Edit an project</h1>

<% if @project.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @project.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end -%>

<%= form_for @project do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :vision %>
		<%= f.text_area :vision %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "Back to project listing", projects_path %>