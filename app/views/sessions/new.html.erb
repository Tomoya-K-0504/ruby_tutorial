<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |form| %>

  <div class="field">
    <%= form.label :mailaddress %>
    <%= form.email_field :mailaddress, id: :member_mailaddress, placeholder: "Enter email", autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :member_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= form.submit "Log in", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
